<%- include("./partials/head", {link :"/css/load-edit-product.css", titulo: "Crear producto"}) %>
<link rel="stylesheet" href="/css/load-edit-product.css">
<title>Crear producto</title>
<body>
    
</head>
<body>
    <%- include('./partials/header')%>
<!--MAIN START-->
    <main>
        <form method="POST" action="/products/create">
        <section class="section-1">
            <img src="/img/upload img.jpg" alt="img" class="imagen">
                <input type="text" placeholder="Nombre del producto" name="nombre">
                <br>
                <textarea id="text" name="descripcion" rows="8" cols="40" placeholder="Descripción"></textarea>
                <br/>
                <div class="categoria-precios"> 
                    <input type="text" name="categoria" placeholder="Categoría">
                    <input type="number" name="precio" placeholder="Precio">
                </div>
                
            
        </section>

        <section>
            
                <label for="text">Modulo 1</label>
                <br>
                <textarea id="text" name="descripcionmodulo" rows="8" cols="40" placeholder="Descripción"></textarea>
                <br/>
              
            <button class="botones">Agregar <p>+</p></button>

            <article class="contenedor-modulos-modalidad">
                <h2>Modalidad</h2>
                <ul>
                <li class="plan">
                    <i class="fa-solid fa-calendar-days"></i>
                    <span class="simbolos-p">
                        <p class="p-plan">Duración</p>
                        <input type="number" name="duracion"> <span> Meses</span>
                    </span>
                </li>
                <li class="plan">
                    <i class="fa-solid fa-laptop"></i>
                    <span class="simbolos-p">
                        <p class="p-plan">Dedicación semanal</p>
                        <input type="number" name="horasporsemana"> <span>Horas</span>
                    </span>
                </li>
                <li class="plan">
                    <i class="far fa-file"></i></i>
                    <span class="simbolos-p">
                        <p class="p-plan">Fechas</p>
                        <input type="date" name="fecha">
                    </span>
                </li>
                <li class="plan">
                    <i class="fa-regular fa-clock"></i>
                    <span class="simbolos-p">
                        <p class="p-plan">Turnos</p>
                        <select name="turno" id="">
                            <option value="" disabled selected> Selecciona el turno elegido </option>
                            <option value="Mañana">Mañana</option>
                            <option value="Tarde">Tarde</option>
                            <option value="Noche">Noche</option>
                        </select>
                        
                    </span>
                </li>
                </ul>
                <button type="submit">Subir nuevo programa</button>
            </article>
        </section>
                </form>
    </main>
<!--MAIN ENDS-->
    <%- include('./partials/footer')%>
</body>
</html>